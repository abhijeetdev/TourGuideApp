<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleTextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itmeImageView"
        android:layout_width="@dimen/image_view_width"
        android:layout_height="@dimen/image_view_height"
        android:layout_marginStart="@dimen/basic_layout_margin"
        android:layout_marginTop="@dimen/basic_layout_margin"
        android:contentDescription="@string/landmark_image_view_descripsion"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/gallery_thumb" />

    <TextView
        android:id="@+id/itemTitleTextView"
        android:layout_width="@dimen/zero_size"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/basic_layout_margin"
        android:layout_marginStart="@dimen/basic_layout_margin"
        android:layout_marginTop="@dimen/basic_layout_margin"
        android:textSize="@dimen/item_title_text_view_size"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itmeImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemDescriptionTextView"
        android:layout_width="@dimen/zero_size"
        android:layout_height="@dimen/zero_size"
        android:layout_marginBottom="@dimen/basic_layout_margin"
        android:layout_marginEnd="@dimen/basic_layout_margin"
        android:layout_marginStart="@dimen/basic_layout_margin"
        android:layout_marginTop="@dimen/basic_layout_margin"
        android:ellipsize="end"
        android:maxLines="@integer/text_view_max_line"
        app:layout_constraintBottom_toBottomOf="@+id/itmeImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itmeImageView"
        app:layout_constraintTop_toBottomOf="@+id/itemTitleTextView" />
</android.support.constraint.ConstraintLayout>