<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/titleTextView">

    <ImageView
            android:layout_width="@dimen/image_view_width"
            android:layout_height="@dimen/image_view_height"
            app:srcCompat="@android:drawable/gallery_thumb"
            android:id="@+id/itmeImageView" android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/landmark_image_view_descripsion"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
    />
    <TextView
            android:layout_height="wrap_content"
            android:id="@+id/itemTitleTextView"
            app:layout_constraintStart_toEndOf="@+id/itmeImageView"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_width="0dp"
            android:textStyle="normal|bold" android:textSize="@dimen/item_title_text_view_size"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/itemDescriptionTextView"
            app:layout_constraintStart_toEndOf="@+id/itmeImageView"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/itmeImageView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itemTitleTextView"
            android:layout_marginBottom="8dp" android:ellipsize="end"
            android:maxLines="@integer/text_view_max_line"/>
</android.support.constraint.ConstraintLayout>